{
  "name": "@climber/core",
  "version": "2.3.0",
  "description": "CLI tool to manage multiple dockerized projects using docker-compose",
  "repository": "https://github.com/tavantzo/climber.git",
  "main": "index.js",
  "license": "MIT",
  "bin": {
    "climb": "./bin/index.js",
    "climb-init": "./bin/init.js",
    "climb-up": "./bin/up.js",
    "climb-down": "./bin/down.js",
    "climb-ps": "./bin/ps.js",
    "climb-logs": "./bin/logs.js",
    "climb-restart": "./bin/restart.js",
    "climb-clean": "./bin/clean.js",
    "climb-config": "./bin/config-show.js",
    "climb-workspace": "./bin/workspace.js",
    "climb-run": "./bin/run.js",
    "climb-git": "./bin/git.js",
    "climb-hooks": "./bin/hooks-cli.js",
    "climb-server": "./bin/server.js"
  },
  "exports": {
    ".": "./index.js",
    "./config": "./bin/config.js",
    "./hooks": "./bin/hooks.js",
    "./vcs": "./bin/vcs.js",
    "./custom-commands": "./bin/custom-commands.js",
    "./dependency-readiness": "./bin/dependency-readiness.js",
    "./folders": "./bin/folders.js"
  },
  "dependencies": {
    "args": "^5.0.1",
    "chalk": "^4.1.2",
    "docker-compose": "^1.3.0",
    "find": "^0.3.0",
    "inquirer": "^8.2.6",
    "inquirer-autocomplete-prompt": "^2.0.0",
    "js-yaml": "^4.1.0",
    "toposort": "^2.0.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "bin/**/*.js",
      "!bin/index.js",
      "!**/node_modules/**",
      "!**/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "lcov",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 27,
        "lines": 28,
        "statements": 27
      }
    },
    "testEnvironment": "node",
    "verbose": true
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --watchAll=false",
    "lint": "eslint bin/ --no-eslintrc --config ../../.eslintrc.js",
    "lint:fix": "eslint bin/ --fix --no-eslintrc --config ../../.eslintrc.js",
    "dev": "node bin/index.js",
    "dev:init": "node bin/init.js",
    "dev:up": "node bin/up.js",
    "dev:down": "node bin/down.js",
    "dev:ps": "node bin/ps.js",
    "dev:workspace": "node bin/workspace.js",
    "clean": "rm -rf node_modules coverage"
  }
}
