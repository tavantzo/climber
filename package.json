{
  "name": "mountain-climber-monorepo",
  "version": "2.3.0",
  "description": "Mountain Climber - Multi-project Docker orchestration tool with GUI",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:core": "yarn workspace @climber/core dev",
    "dev:server": "yarn workspace @climber/server dev",
    "dev:web": "yarn workspace @climber/web start",
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:web\"",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "test:core": "yarn workspace @climber/core test",
    "test:server": "yarn workspace @climber/server test",
    "lint": "yarn workspaces run lint",
    "clean": "yarn workspaces run clean && rm -rf node_modules"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tavantzo/climber.git"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "lerna": "^7.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
